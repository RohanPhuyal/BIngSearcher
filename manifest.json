{
  "name": "Bing Searcher",
  "version": "5.1",
  "manifest_version": 2,
  "description": "Perform multiple random searches on Bing.com for Microsoft Rewards",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "https://www.bing.com/",
    "https://www.msn.com/en-us/shopping/*"
  ],"content_scripts": [
    {
      "js": [
        "contentscript.js"
      ],
      "matches": [
        "https://www.msn.com/en-us/shopping*"
      ]
    }
  ],
  "web_accessible_resources": ["script.js"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}
