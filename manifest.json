{
  "name": "Bing Searcher",
  "version": "3.1",
  "manifest_version": 2,
  "description": "Perform multiple random searches on Bing.com for Microsoft Rewards",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "https://www.bing.com/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}
